/*
Script Purpose:
    This stored procedure loads data into the 'bronze' schema from external CSV files. 
    It performs the following actions:
    - Truncates the bronze tables before loading data.
    - Uses the `BULK INSERT` command to load data from csv Files to bronze tables.
    */


-- we choose the latest data so we rank it  and choose the lstest data input 
-- trim spaces
-- change F/M -->Male/ Female 
-- insert in silver layer 


    TRUNCATE TABLE silver.crm_cust_info;
    print('____inserting data in table_________')
    INSERT INTO silver.crm_cust_info
    (
        cst_id,
        cst_key,
        cst_firstname,
        cst_lastname,
        cst_matrial_status,
        cst_gender,
        cst_create_date
    )
    SELECT
        cst_id,
        cst_key,
        TRIM(cst_firstname) AS cst_firstname,         -- Trimming unwanted space
        TRIM(cst_lastname) AS cst_lastname,
        cst_matrial_status,
        CASE 
            WHEN UPPER(TRIM(cst_gender)) = 'M' THEN 'Male'  -- conforming M/F = Male / Female
            WHEN UPPER(TRIM(cst_gender)) = 'F' THEN 'Female'
            ELSE 'N/A'
        END AS cst_gender,
        cst_create_date
    FROM
    (
        SELECT *,
               ROW_NUMBER() OVER (
                   PARTITION BY cst_id
                   ORDER BY cst_create_date DESC
               ) AS latest
        FROM Bronze.crm_cust_info                   --selecting latest data if duplicates are there 
    ) t
    WHERE latest = 1
    AND cst_id IS NOT NULL;

    print('------------ moving on next table -----------------')


    --updating prd_info
    TRUNCATE TABLE silver.crm_prd_info;
    PRINT('_____ Inserting data into silver.crm_prd_info _____');

    insert into silver.crm_prd_info(
    prd_id,
    cat_id ,
    prd_key ,
    prd_nm ,
    prd_cost ,
    prd_line ,
    prd_start_dt ,
    prd_end_date 
    )

    SELECT
        prd_id,

        -- Category ID (align with cust_g1v2: replace '-' with '_')
        REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,

        -- Product key (aligned with sales table format)
        SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,

        -- Product name
        prd_nm,

        -- Product cost
        prd_cost,

        -- Product line mapping
        CASE
            WHEN UPPER(LTRIM(RTRIM(prd_line))) = 'M' THEN 'Mountain'
            WHEN UPPER(LTRIM(RTRIM(prd_line))) = 'R' THEN 'Road'
            WHEN UPPER(LTRIM(RTRIM(prd_line))) = 'S' THEN 'Other_Sales'
            WHEN UPPER(LTRIM(RTRIM(prd_line))) = 'T' THEN 'Touring'
            ELSE 'N/A'
        END AS prd_line,

        -- Product start date
        prd_start_dt,

        -- Product end date (1 day before next start date)
        DATEADD(
            day,
            -1,
            LEAD(prd_start_dt) OVER (
                PARTITION BY prd_key
                ORDER BY prd_start_dt
            )
        ) AS prd_end_dt

    FROM bronze.crm_prd_info;

    -- moving to crm_sales_details table

    TRUNCATE TABLE silver.crm_sales_details;
    PRINT('_____ Inserting data into silver.crm_sales_details _____');

    INSERT INTO silver.crm_sales_details
    (
        sls_ord_num,
        sls_prd_key,
        sls_cust_id,

        sls_order_dt,
        sls_ship_dt,
        sls_due_dt,

        sls_sales,
        sls_quantity,
        sls_price
    )
    SELECT
        sls_ord_num,
        sls_prd_key,
        sls_cust_id,

        -- Order Date: validate length and zero values
        CASE
            WHEN sls_order_dt = '0'
              OR LEN(sls_order_dt) <> 8
            THEN NULL
            ELSE CAST(sls_order_dt AS DATE)
        END AS sls_order_dt,

        -- Ship Date
        CASE
            WHEN sls_ship_dt = '0'
              OR LEN(sls_ship_dt) <> 8
            THEN NULL
            ELSE CAST(sls_ship_dt AS DATE)
        END AS sls_ship_dt,

        -- Due Date
        CASE
            WHEN sls_due_dt = '0'
              OR LEN(sls_due_dt) <> 8
            THEN NULL
            ELSE CAST(sls_due_dt AS DATE)
        END AS sls_due_dt,

        -- Sales: correct invalid or mismatched values
        CAST(
            CASE
                WHEN sls_sales IS NULL
                  OR sls_sales <= 0
                  OR sls_sales <> sls_quantity * ABS(sls_price)
                THEN sls_quantity * ABS(sls_price)
                ELSE sls_sales
            END
            AS DECIMAL(10, 2)
        ) AS sls_sales,

        sls_quantity,

        -- Price: derive if missing or invalid
        CAST(
            CASE
                WHEN sls_price IS NULL
                  OR sls_price <= 0
                THEN sls_sales / NULLIF(sls_quantity, 0)
                ELSE sls_price
            END
            AS DECIMAL(10, 2)
        ) AS sls_price

    FROM bronze.crm_sales_details;

    print('_______----moving to erp_cust---________')

    TRUNCATE TABLE silver.erp_cust_az12;
    PRINT('_____ Inserting data into silver.erp_cust_az12 _____');

    insert into silver.erp_cust_az12
    (
    cid,
    bdate,
    gen
    )
    select

    case 
	    when cid like 'NAS%' then substring(cid,4 , len(cid))
    else cid
    end as cid, 
    case 
	    when bdate > getdate() then NULL
	    else bdate
	    end as 
    bdate,

    case 
	    when UPPER(trim(gen)) in ('F' , 'FEMALE') then 'FEMALE'
	    when UPPER(trim(gen)) in ('M' ,'MALE') then 'MALE'
	    else 'N/A'
    end as gen
    from bronze.erp_cust_az12

    print('______________--- proceeding to erp_loc101---------________________')

    TRUNCATE TABLE silver.erp_loc_a101;
    PRINT('_____ Inserting data into silver.erp_loc_a101 _____');

    INSERT INTO silver.erp_loc_a101
    (
        cid,
        cntry
    )
    SELECT
        REPLACE(cid, '-', '') AS cid,

        CASE
            WHEN TRIM(cntry) = 'DE'              THEN 'Germany'
            WHEN TRIM(cntry) IN ('US', 'USA')    THEN 'United State'
            WHEN cntry IS NULL
              OR TRIM(cntry) = ''                THEN 'N/A'
            ELSE TRIM(cntry)
        END AS cntry

    FROM bronze.erp_loc_a101;

    print('----_________erp_px_cat_g1v2__________-----')

    TRUNCATE TABLE silver.erp_px_cat_g1v2;
    PRINT('_____ Inserting data into silver.erp_px_cat_g1v2 _____');

    insert into silver.erp_px_cat_g1v2
    (
    id,
    cat,
    subcat,
    maintenance
    )
    select
    id,
    cat,
    subcat,
    maintenance
    from bronze.erp_px_cat_g1v2
